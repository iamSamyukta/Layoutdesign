<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="1dp">


            <ImageView
                android:id="@+id/imageViewprofilepicture"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="9dp"
                android:adjustViewBounds="true"
                android:src="@drawable/profile" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/imageViewprofilepicture"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="-50dp"
                android:background="@drawable/circle"
                android:src="@drawable/ic_baseline_add_24" />

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/curve">

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="250dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/two"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="40dp">


        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FullName"
            android:hint="Name"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
            />
        <EditText
            android:id="@+id/EmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailaddress"
            android:layout_marginTop="50dp"
            android:hint="Email"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"/>

        <EditText
            android:id="@+id/BirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BirthDate"
            android:layout_marginTop="95dp"
            android:hint="BirthDate"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_baseline_cake_24"/>
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_marginTop="140dp"
            android:hint="Phone"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_baseline_phone_android_24"/>

<!--        <View-->
<!--            android:layout_width="400dp"-->
<!--            android:layout_height="1dp"-->
<!--            android:background="#ACA1A1"-->
<!--            android:layout_gravity="center"/>-->

        <TextView
            android:id="@+id/userAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_marginStart="5dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_marginStart="33dp"
                android:spinnerMode="dropdown"/>


        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
            android:id="@+id/google1"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/curves"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/glogo"
            android:text="Continue with Google"
            android:textColor="@color/black"
            android:textStyle="bold" />



        <Button
            android:id="@+id/facebook1"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/curves"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/fblogo"
            android:text="Continue with Facebook"
            android:textColor="@color/black"
            android:textStyle="bold" />

        </LinearLayout>



        <Button
            android:id="@+id/save"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/brown"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:background="@drawable/round_button"
            android:textAllCaps="false"
            app:cornerRadius="24dp" />


    </LinearLayout>


</LinearLayout>

