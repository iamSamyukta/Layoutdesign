<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:background="@drawable/backgroun1"
    app:behavior_peekHeight="250dp"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <ImageView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_horizontal_rule_24"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/ic_baseline_turn_right_24"
        android:text="@string/bangalore"
        android:textColor="@color/clr"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HSR Layout                                   "
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Native HSR, 29, 14th Main Rd, Sector 4"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="------------------------------------------------------------------------------------------------------"
        android:textColor="@color/bgm"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="CAFE TIMINGS"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Monday \nTuesday \nWednesday \nThursday \nFriday \nSaturday \nSunday"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="8:00 am to 11:00pm\n8:00 am to 11:00pm\n8:00 am to 11:00pm\n8:00 am to 11:00pm\n8:00 am to 11:00pm\n8:00 am to 11:00pm\n8:00 am to 11:00pm\n"
            android:textSize="20sp">

        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-255dp"
        android:ems="20"
        android:inputType="textPersonName"
        android:text="ABOUT LOCALITY"
        android:textColor="#090707"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="HumbleBean Coffee - HSR Layout"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal" />

</LinearLayout>

