<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".page2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imagebutton"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#AB363535"
                    android:src="@drawable/iic"
                    tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-395dp"
                    android:drawableRight="@drawable/ic_baseline_cancel_24" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:text="Iced Tea"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="That old and the most familiar comfort in a cup"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:text="A mouth-watering blend of iced coffee and exquisite flavours"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="WHY TO BUY?"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="250dp"
                    android:orientation="horizontal"
                    android:padding="24dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="350dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/two"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="40dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:contentDescription="@string/todo"
                            android:drawableLeft="@drawable/ic_baseline_local_offer_24"
                            android:padding="30dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Save 50% on your favourite beverage when you buy a pack" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="350dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="35dp"
                        android:background="@drawable/two"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="40dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:contentDescription="@string/todo"
                            android:drawableLeft="@drawable/ic_baseline_coffee_24"
                            android:padding="30dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Choose from a wide selection of beverages" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="350dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="35dp"
                        android:background="@drawable/two"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="40dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:contentDescription="@string/todo"
                            android:drawableLeft="@drawable/ic_baseline_pause_circle_outline_24"
                            android:gravity="center"
                            android:padding="30dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Pause your pack any time" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="350dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="35dp"
                        android:background="@drawable/two"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="40dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:contentDescription="@string/todo"
                            android:drawableLeft="@drawable/ic_baseline_qr_code_scanner_24"
                            android:padding="30dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Redeem your benefits hassle-free at any HumbleBean cafe" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="PACKS"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/group1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:alpha="0.8"
                    app:cardCornerRadius="20dp">


                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="26dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="60dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="  5 Cups"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:text="  ₹ 202/cup"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/wh"
                        android:text="  ₹ 1000"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="90dp"
                        android:background="@color/clr"
                        android:text="Valid for 365days"
                        android:textAlignment="center"
                        android:textColor="#E1BEE7"
                        android:textSize="10dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="-110dp"
                    android:alpha="0.8"
                    app:cardCornerRadius="20dp">

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="26dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="60dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text=" 10 Cups"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:text="  ₹ 198/cup"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/wh"
                        android:text="  ₹ 1985"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="90dp"
                        android:background="@color/clr"
                        android:text="Valid for 365days"
                        android:textAlignment="center"
                        android:textColor="#E1BEE7"
                        android:textSize="10dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="24dp"
                    android:alpha="0.8"
                    app:cardCornerRadius="20dp">

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="26dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="60dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text=" 20 Cups"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:text="  ₹ 196/cup"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/wh"
                        android:text="  ₹ 3910"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="90dp"
                        android:background="@color/clr"
                        android:text="Valid for 365days"
                        android:textAlignment="center"
                        android:textColor="#E1BEE7"
                        android:textSize="10dp" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="-110dp"
                    android:alpha="0.8"
                    app:cardCornerRadius="20dp">

                    <RadioButton
                        android:id="@+id/radioButton4"
                        android:layout_width="26dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="60dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="  30 Cups"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:text="  ₹ 184/cup"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/wh"
                        android:text="  ₹ 5520"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="90dp"
                        android:background="@color/clr"
                        android:text="Valid for 365days"
                        android:textAlignment="center"
                        android:textColor="#E1BEE7"
                        android:textSize="10dp" />

                </androidx.cardview.widget.CardView>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:text="ITEMS INCLUDED"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardid"
                android:layout_width="230dp"
                android:layout_height="220dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="50dp">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/r" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="REDEEM AT OUR CAFES"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>


