<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Setting">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:background="#63FFFFFF"
                android:padding="15dp">

                <Button
                    android:id="@+id/notifications"
                    android:layout_width="1380dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_notifications_24"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="left"
                    android:text="Notification"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/button_general"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_below="@+id/notifications"
                    android:layout_alignParentLeft="true"
                    android:backgroundTint="@color/white"
                    android:gravity="left"
                    android:labelFor="@+id/button_general"
                    android:padding="20dp"
                    android:text="GENERAL"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_cafes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_general"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_local_cafe_24"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="left"
                    android:text="Cafes"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/button_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_cafes"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_history_24"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="left"
                    android:text="Purchase Transaction History"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/button_organization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_history"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_assignment_turned_in_24"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="left"
                    android:text="Link Partner Organization"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/button_membership"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_organization"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_auto_graph_24"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="left"
                    android:text="Membership Levels"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/button_about"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_below="@+id/button_membership"
                    android:layout_alignParentLeft="true"
                    android:backgroundTint="@color/white"
                    android:padding="20dp"
                    android:text="ABOUT"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/button_faqs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_about"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_fact_check_24"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="left"
                    android:text="FAQ's"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/button_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_faqs"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_chrome_reader_mode_24"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="left"
                    android:text="Terms and Conditions"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/button_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_conditions"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_private_connectivity_24"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="left"
                    android:text="Privacy Policy"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/button_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_policy"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="left"
                    android:text="Contact Us"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/button_permission"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_below="@+id/button_contact"
                    android:layout_alignParentLeft="true"
                    android:backgroundTint="@color/white"
                    android:padding="20dp"
                    android:text="Permissions"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/button_permission"
                    android:text="Notifications"
                    android:textSize="19dp" />

                <Switch
                    android:id="@+id/switch2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/switch1"
                    android:text="Location"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/button_account"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_below="@+id/switch2"
                    android:layout_alignParentLeft="true"
                    android:backgroundTint="@color/white"
                    android:padding="20dp"
                    android:text="ACCOUNT"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_account"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_logout_24"
                    android:gravity="left"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/button_v151"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/button_logout"
                    android:backgroundTint="@color/white"
                    android:padding="30dp"
                    android:text="v151"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>